{
  "name": "livery",
  "version": "3.0.0",
  "description": "Minimal dev server to dispense static files.",
  "author": "Shannon Moeller <me@shannonmoeller> (http://shannonmoeller.com)",
  "repository": "shannonmoeller/livery",
  "license": "MIT",
  "keywords": [
    "cli",
    "dev",
    "live",
    "livereload",
    "lr",
    "reload",
    "server"
  ],
  "type": "module",
  "main": "index.js",
  "bin": {
    "livery": "cli.js",
    "lr": "cli.js"
  },
  "dependencies": {
    "chokidar": "^3.4.2",
    "ip": "^1.1.5",
    "minimist": "^1.2.5",
    "send": "^0.17.1",
    "tiny-lr": "^2.0.0"
  },
  "scripts": {
    "lint": "npm run lint-eslint && npm run lint-prettier",
    "lint-eslint": "npx eslint --ignore-path .gitignore --fix '**/*.js'",
    "lint-prettier": "npx prettier --ignore-path .gitignore --write '**/*.js'"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "engines": {
    "node": ">=12.17.0"
  }
}
